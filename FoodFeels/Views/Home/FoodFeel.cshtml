@model FoodFeels.ViewModels.FoodFeelViewModel

@{
    ViewBag.Title = "FoodFeel";
}

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4 gb-form-wrap">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <h2 class="text-center">Food</h2>
                    
                    @Html.EditorFor(model => model.FoodName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FoodName, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <h2 class="text-center">Feeling</h2>
                    
                    <div class="flex-space-around gb-buttons-container">

                        <div class="gb-radio-container">
                            @Html.RadioButtonFor(model => model.Feeling, 1, new { @id = "feeling1" })
                            <label for="feeling1">
                                <span class="gb-radio-span1 gb-radio"></span>
                            </label>
                        </div>

                        <div class="gb-radio-container">
                            @Html.RadioButtonFor(model => model.Feeling, 2, new { @id = "feeling2" })
                            <label for="feeling2">
                                <span class="gb-radio-span2 gb-radio"></span>
                            </label>
                        </div>

                        <div class="gb-radio-container">
                            @Html.RadioButtonFor(model => model.Feeling, 3, new { @id = "feeling3" })
                            <label for="feeling3">
                                <span class="gb-radio-span3 gb-radio"></span>
                            </label>
                        </div>

                    </div>
                    
                    
                    @Html.ValidationMessageFor(model => model.Feeling, "", new { @class = "text-danger" })

                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Submit" class="btn btn-primary gb-submit-button" />
                </div>
                <p>@ViewBag.SaveMessage</p>
            }
        </div>
    </div>
</div>


